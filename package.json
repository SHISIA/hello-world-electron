{
  "name": "hello-world-electron",
  "private": true,
  "version": "0.0.0",
  "description": "A hello world Electron application",
  "author": "Your Name <your.email@example.com>",
  "type": "module",
  "main": "src/electron/main.js",
  "scripts": {
    "dev:react": "vite",
    "dev:electron": "electron .",
    "dev": "vite",
    "build": "tsc -b && vite build",
    "clean": "rm -rf dist",
    "package": "npm run clean && npm run build && electron-builder --mac",
    "package:universal": "npm run clean && npm run build && electron-builder --mac --universal",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "build": {
    "appId": "com.example.helloworld",
    "productName": "HelloWorldElectronApp",
    "files": [
      "dist-react/**/*",
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "public.app-category.utilities",
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "gatekeeperAssess": false,
      "identity": "James Shisia (xxxxxxxxx)"
    },
    "afterSign": "build/notarize.cjs",
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "dotenv": "^16.5.0",
    "electron": "^36.2.0",
    "electron-builder": "^26.0.12",
    "electron-notarize": "^1.2.2",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5"
  }
}
